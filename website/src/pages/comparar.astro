---
import laptops from '../data/laptops.json';
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Comparador VS - LaptopComparator</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-body: #0f172a;
            --card-bg: rgba(30, 41, 59, 0.7);
            --accent: #818cf8;
            --text-main: #ffffff;
            --text-muted: #94a3b8;
            --win-color: #4ade80; /* Verde √âxito */
            --lose-color: #f87171; /* Rojo Derrota */
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            margin: 0; padding: 0; min-height: 100vh;
            /* Mismo fondo Mesh Gradient que la portada */
            background: radial-gradient(at 0% 0%, #4c1d95 0px, transparent 50%), 
                        radial-gradient(at 100% 0%, #3b82f6 0px, transparent 50%), 
                        #1e1b4b;
        }

        .navbar {
            display: flex; justify-content: space-between; align-items: center;
            padding: 20px 40px; background: rgba(15, 23, 42, 0.8); backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .logo { font-weight: 800; font-size: 1.2rem; text-decoration: none; color: white; }
        .back-btn { text-decoration: none; color: var(--text-muted); font-weight: 600; font-size: 0.9rem; }
        .back-btn:hover { color: white; }

        .container { max-width: 1000px; margin: 40px auto; padding: 0 20px; text-align: center; }

        h1 { font-size: 2.5rem; margin-bottom: 40px; background: linear-gradient(to right, #fff, #818cf8); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

        /* --- SELECTORES --- */
        .vs-controls {
            display: flex; align-items: center; justify-content: center; gap: 20px;
            margin-bottom: 50px; flex-wrap: wrap;
        }

        select {
            background: var(--card-bg); color: white; border: 1px solid rgba(255,255,255,0.2);
            padding: 15px; border-radius: 12px; font-size: 1rem; width: 300px;
            outline: none; cursor: pointer;
        }
        select:focus { border-color: var(--accent); }

        .vs-badge {
            background: var(--accent); color: white; font-weight: 800; padding: 10px 15px;
            border-radius: 50%; font-size: 1.2rem; box-shadow: 0 0 20px rgba(129, 140, 248, 0.5);
        }

        .btn-compare {
            background: white; color: black; border: none; padding: 12px 30px;
            font-weight: 700; border-radius: 100px; cursor: pointer; margin-top: 20px;
            transition: transform 0.2s; display: block; margin: 0 auto;
        }
        .btn-compare:hover { transform: scale(1.05); }

        /* --- TABLA COMPARATIVA --- */
        .comparison-table {
            width: 100%; border-collapse: separate; border-spacing: 0 10px;
            display: none; /* Oculta al principio */
            margin-top: 40px;
        }

        .comparison-table th { color: var(--text-muted); padding: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px; }
        
        .col-laptop { width: 40%; background: rgba(255,255,255,0.03); padding: 20px; border-radius: 10px; vertical-align: middle; transition: 0.3s; }
        .col-label { width: 20%; color: var(--accent); font-weight: 700; font-size: 0.9rem; }

        .laptop-img { width: 100%; height: 150px; object-fit: contain; margin-bottom: 15px; }
        .laptop-name { font-weight: 700; font-size: 1.1rem; display: block; margin-bottom: 5px; min-height: 50px;}
        .data-point { font-size: 1.1rem; }

        /* Estilos de ganador/perdedor */
        .winner { color: var(--win-color); font-weight: 700; text-shadow: 0 0 10px rgba(74, 222, 128, 0.3); }
        .loser { color: var(--text-muted); opacity: 0.6; text-decoration: line-through; }
        
        .highlight-row { background: rgba(255,255,255,0.05); }

        @media (max-width: 768px) {
            .vs-controls { flex-direction: column; }
            select { width: 100%; }
            .col-label { font-size: 0.7rem; }
            .data-point { font-size: 0.9rem; }
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="logo">‚ö° LaptopComparator</a>
        <a href="/" class="back-btn">‚Üê Volver al inicio</a>
    </nav>

    <div class="container">
        <h1>Cara a Cara</h1>
        <p style="color: #94a3b8; margin-bottom: 30px;">Selecciona dos modelos para ver sus diferencias t√©cnicas.</p>

        <div class="vs-controls">
            <select id="select1">
                <option value="" disabled selected>Elige el Port√°til A</option>
                {laptops.map((laptop, index) => (
                    <option value={index}>{laptop.name} ({laptop.price_eur}‚Ç¨)</option>
                ))}
            </select>

            <div class="vs-badge">VS</div>

            <select id="select2">
                <option value="" disabled selected>Elige el Port√°til B</option>
                {laptops.map((laptop, index) => (
                    <option value={index}>{laptop.name} ({laptop.price_eur}‚Ç¨)</option>
                ))}
            </select>
        </div>

        <button class="btn-compare" id="compareBtn">Comparar Ahora üî•</button>

        <table class="comparison-table" id="resultsTable">
            <thead>
                <tr>
                    <th id="name1">Modelo A</th>
                    <th>Especificaci√≥n</th>
                    <th id="name2">Modelo B</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-laptop"><img id="img1" src="" class="laptop-img"></td>
                    <td class="col-label">DISE√ëO</td>
                    <td class="col-laptop"><img id="img2" src="" class="laptop-img"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="price1"></td>
                    <td class="col-label">PRECIO</td>
                    <td class="col-laptop data-point" id="price2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="ram1"></td>
                    <td class="col-label">RAM</td>
                    <td class="col-laptop data-point" id="ram2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="storage1"></td>
                    <td class="col-label">DISCO</td>
                    <td class="col-laptop data-point" id="storage2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="weight1"></td>
                    <td class="col-label">PESO</td>
                    <td class="col-laptop data-point" id="weight2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="cpu1" style="font-size: 0.9rem;"></td>
                    <td class="col-label">PROCESADOR</td>
                    <td class="col-laptop data-point" id="cpu2" style="font-size: 0.9rem;"></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script define:vars={{ laptops }}>
        const btn = document.getElementById('compareBtn');
        const table = document.getElementById('resultsTable');
        const select1 = document.getElementById('select1');
        const select2 = document.getElementById('select2');

        // Funci√≥n para limpiar n√∫meros de texto (ej: "16 GB" -> 16)
        const parseNum = (str) => {
            if(!str) return 0;
            const match = str.toString().match(/(\d+(\.\d+)?)/);
            return match ? parseFloat(match[0]) : 0;
        };

        btn.addEventListener('click', () => {
            const idx1 = select1.value;
            const idx2 = select2.value;

            if (idx1 === "" || idx2 === "") {
                alert("Por favor, selecciona dos port√°tiles.");
                return;
            }

            const lap1 = laptops[idx1];
            const lap2 = laptops[idx2];

            // Mostrar tabla
            table.style.display = "table";
            
            // Rellenar datos b√°sicos
            document.getElementById('img1').src = lap1.brand_img;
            document.getElementById('img2').src = lap2.brand_img;
            document.getElementById('name1').innerText = lap1.name;
            document.getElementById('name2').innerText = lap2.name;
            document.getElementById('cpu1').innerText = lap1.specs.cpu;
            document.getElementById('cpu2').innerText = lap2.specs.cpu;

            // --- L√ìGICA DE GANADORES ---

            // 1. PRECIO (Menos es mejor)
            const p1 = parseFloat(lap1.price_eur);
            const p2 = parseFloat(lap2.price_eur);
            renderRow('price', p1, p2, p1 + ' ‚Ç¨', p2 + ' ‚Ç¨', true); // true = menor gana

            // 2. RAM (M√°s es mejor)
            const r1 = parseNum(lap1.specs.ram);
            const r2 = parseNum(lap2.specs.ram);
            renderRow('ram', r1, r2, lap1.specs.ram, lap2.specs.ram, false);

            // 3. STORAGE (M√°s es mejor)
            const s1 = parseNum(lap1.specs.storage);
            const s2 = parseNum(lap2.specs.storage);
            // Peque√±o hack: Si uno es TB y otro GB, multiplicamos TB por 1000
            let valS1 = s1; let valS2 = s2;
            if(lap1.specs.storage.includes('TB')) valS1 = s1 * 1000;
            if(lap2.specs.storage.includes('TB')) valS2 = s2 * 1000;
            renderRow('storage', valS1, valS2, lap1.specs.storage, lap2.specs.storage, false);

            // 4. PESO (Menos es mejor)
            const w1 = parseNum(lap1.specs.weight);
            const w2 = parseNum(lap2.specs.weight);
            renderRow('weight', w1, w2, lap1.specs.weight, lap2.specs.weight, true);

            // Scroll suave hacia los resultados
            table.scrollIntoView({ behavior: 'smooth' });
        });

        function renderRow(id, val1, val2, text1, text2, lowerIsBetter) {
            const el1 = document.getElementById(id + '1');
            const el2 = document.getElementById(id + '2');
            
            el1.innerText = text1;
            el2.innerText = text2;
            
            // Reset clases
            el1.classList.remove('winner', 'loser');
            el2.classList.remove('winner', 'loser');

            if(val1 === val2) return; // Empate

            let win1 = lowerIsBetter ? val1 < val2 : val1 > val2;

            if(win1) {
                el1.classList.add('winner');
                el2.classList.add('loser');
            } else {
                el1.classList.add('loser');
                el2.classList.add('winner');
            }
        }
    </script>
</body>
</html>