---
import laptops from '../data/laptops.json';
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>VS Comparator - LaptopComparator</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-body: #0f172a;
            --card-bg: rgba(30, 41, 59, 0.7);
            --accent: #818cf8;
            --text-main: #ffffff;
            --text-muted: #94a3b8;
            --win-color: #4ade80;
            --lose-color: #f87171;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body); color: var(--text-main);
            margin: 0; padding: 0; min-height: 100vh;
            background: radial-gradient(at 0% 0%, #4c1d95 0px, transparent 50%), 
                        radial-gradient(at 100% 0%, #3b82f6 0px, transparent 50%), #1e1b4b;
        }

        .navbar {
            display: flex; justify-content: space-between; align-items: center;
            padding: 20px 40px; background: rgba(15, 23, 42, 0.8); backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .logo { font-weight: 800; font-size: 1.2rem; text-decoration: none; color: white; }
        .back-btn { text-decoration: none; color: var(--text-muted); font-weight: 600; font-size: 0.9rem; }
        .back-btn:hover { color: white; }
        
        /* Bot√≥n idioma */
        .lang-switch { background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); color: white; padding: 5px 10px; border-radius: 20px; font-size: 0.75rem; cursor: pointer; margin-left: 10px; }

        .container { max-width: 1000px; margin: 40px auto; padding: 0 20px; text-align: center; }

        h1 { font-size: 2.5rem; margin-bottom: 40px; background: linear-gradient(to right, #fff, #818cf8); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

        /* CONTROLES */
        .vs-controls { display: flex; align-items: center; justify-content: center; gap: 20px; margin-bottom: 50px; flex-wrap: wrap; }
        select { background: var(--card-bg); color: white; border: 1px solid rgba(255,255,255,0.2); padding: 15px; border-radius: 12px; font-size: 1rem; width: 300px; outline: none; cursor: pointer; }
        .vs-badge { background: var(--accent); color: white; font-weight: 800; padding: 10px 15px; border-radius: 50%; font-size: 1.2rem; box-shadow: 0 0 20px rgba(129, 140, 248, 0.5); }
        .btn-compare { background: white; color: black; border: none; padding: 12px 30px; font-weight: 700; border-radius: 100px; cursor: pointer; margin-top: 20px; transition: transform 0.2s; display: block; margin: 0 auto; }
        .btn-compare:hover { transform: scale(1.05); }

        /* TABLA */
        .comparison-table { width: 100%; border-collapse: separate; border-spacing: 0 10px; display: none; margin-top: 40px; }
        .comparison-table th { color: var(--text-muted); padding: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px; }
        .col-laptop { width: 40%; background: rgba(255,255,255,0.03); padding: 20px; border-radius: 10px; vertical-align: middle; transition: 0.3s; }
        .col-label { width: 20%; color: var(--accent); font-weight: 700; font-size: 0.9rem; }
        .laptop-img { width: 100%; height: 150px; object-fit: contain; margin-bottom: 15px; }
        .winner { color: var(--win-color); font-weight: 700; text-shadow: 0 0 10px rgba(74, 222, 128, 0.3); }
        .loser { color: var(--text-muted); opacity: 0.6; text-decoration: line-through; }
        
        @media (max-width: 768px) { .vs-controls { flex-direction: column; } select { width: 100%; } }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="logo">‚ö° LaptopComparator</a>
        <div>
            <a href="/" class="back-btn" data-i18n="back_btn">‚Üê Volver al inicio</a>
            <button id="lang-toggle" class="lang-switch">üá™üá∏ ES</button>
        </div>
    </nav>

    <div class="container">
        <h1 data-i18n="title">Cara a Cara</h1>
        <p style="color: #94a3b8; margin-bottom: 30px;" data-i18n="subtitle">Selecciona dos modelos para ver sus diferencias t√©cnicas.</p>

        <div class="vs-controls">
            <select id="select1">
                <option value="" disabled selected data-i18n="select_a">Elige el Port√°til A</option>
                {laptops.map((laptop, index) => (
                    <option value={index}>{laptop.name}</option>
                ))}
            </select>

            <div class="vs-badge">VS</div>

            <select id="select2">
                <option value="" disabled selected data-i18n="select_b">Elige el Port√°til B</option>
                {laptops.map((laptop, index) => (
                    <option value={index}>{laptop.name}</option>
                ))}
            </select>
        </div>

        <button class="btn-compare" id="compareBtn" data-i18n="btn_compare">Comparar Ahora üî•</button>

        <table class="comparison-table" id="resultsTable">
            <thead>
                <tr>
                    <th id="name1">Modelo A</th>
                    <th data-i18n="col_spec">Especificaci√≥n</th>
                    <th id="name2">Modelo B</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-laptop"><img id="img1" src="" class="laptop-img"></td>
                    <td class="col-label" data-i18n="row_design">DISE√ëO</td>
                    <td class="col-laptop"><img id="img2" src="" class="laptop-img"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="price1"></td>
                    <td class="col-label" data-i18n="row_price">PRECIO</td>
                    <td class="col-laptop data-point" id="price2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="ram1"></td>
                    <td class="col-label">RAM</td>
                    <td class="col-laptop data-point" id="ram2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="storage1"></td>
                    <td class="col-label" data-i18n="row_disk">DISCO</td>
                    <td class="col-laptop data-point" id="storage2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="weight1"></td>
                    <td class="col-label" data-i18n="row_weight">PESO</td>
                    <td class="col-laptop data-point" id="weight2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="cpu1" style="font-size: 0.9rem;"></td>
                    <td class="col-label" data-i18n="row_cpu">CPU</td>
                    <td class="col-laptop data-point" id="cpu2" style="font-size: 0.9rem;"></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script define:vars={{ laptops }}>
        const btn = document.getElementById('compareBtn');
        const table = document.getElementById('resultsTable');
        const select1 = document.getElementById('select1');
        const select2 = document.getElementById('select2');
        const langToggle = document.getElementById('lang-toggle');

        // --- SISTEMA DE IDIOMAS ---
        const translations = {
            es: {
                back_btn: "‚Üê Volver al inicio",
                title: "Cara a Cara",
                subtitle: "Selecciona dos modelos para ver sus diferencias t√©cnicas.",
                select_a: "Elige el Port√°til A",
                select_b: "Elige el Port√°til B",
                btn_compare: "Comparar Ahora üî•",
                col_spec: "Especificaci√≥n",
                row_design: "DISE√ëO",
                row_price: "PRECIO",
                row_disk: "DISCO",
                row_weight: "PESO",
                row_cpu: "PROCESADOR"
            },
            en: {
                back_btn: "‚Üê Back to Home",
                title: "Head to Head",
                subtitle: "Select two models to check technical differences.",
                select_a: "Choose Laptop A",
                select_b: "Choose Laptop B",
                btn_compare: "Compare Now üî•",
                col_spec: "Specification",
                row_design: "DESIGN",
                row_price: "PRICE",
                row_disk: "STORAGE",
                row_weight: "WEIGHT",
                row_cpu: "PROCESSOR"
            }
        };

        const userLang = navigator.language || navigator.userLanguage; 
        let currentLang = userLang.startsWith('es') ? 'es' : 'en';

        function setLanguage(lang) {
            currentLang = lang;
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if(translations[lang][key]) el.innerText = translations[lang][key];
            });
            langToggle.innerText = lang === 'es' ? 'üá∫üá∏ EN' : 'üá™üá∏ ES';
            
            // Si la tabla ya est√° visible, actualiza los precios al nuevo idioma
            if(table.style.display === "table") runComparison(); 
        }

        setLanguage(currentLang); // Ejecutar al inicio

        langToggle.addEventListener('click', () => {
            setLanguage(currentLang === 'es' ? 'en' : 'es');
        });

        // --- L√ìGICA DE COMPARACI√ìN ---
        
        const parseNum = (str) => {
            if(!str) return 0;
            const match = str.toString().match(/(\d+(\.\d+)?)/);
            return match ? parseFloat(match[0]) : 0;
        };

        function runComparison() {
            const idx1 = select1.value;
            const idx2 = select2.value;

            if (idx1 === "" || idx2 === "") return;

            const lap1 = laptops[idx1];
            const lap2 = laptops[idx2];
            table.style.display = "table";
            
            document.getElementById('img1').src = lap1.brand_img;
            document.getElementById('img2').src = lap2.brand_img;
            document.getElementById('name1').innerText = lap1.name;
            document.getElementById('name2').innerText = lap2.name;
            document.getElementById('cpu1').innerText = lap1.specs.cpu;
            document.getElementById('cpu2').innerText = lap2.specs.cpu;

            // 1. PRECIO (Con conversi√≥n de moneda)
            let p1 = parseFloat(lap1.price_eur);
            let p2 = parseFloat(lap2.price_eur);
            let currency = "‚Ç¨";
            
            if (currentLang === 'en') {
                p1 = Math.round(p1 * 1.08);
                p2 = Math.round(p2 * 1.08);
                currency = "$";
            }
            
            renderRow('price', p1, p2, currency + p1, currency + p2, true);

            // 2. RAM
            const r1 = parseNum(lap1.specs.ram);
            const r2 = parseNum(lap2.specs.ram);
            renderRow('ram', r1, r2, lap1.specs.ram, lap2.specs.ram, false);

            // 3. STORAGE
            const s1 = parseNum(lap1.specs.storage);
            const s2 = parseNum(lap2.specs.storage);
            let valS1 = s1; let valS2 = s2;
            if(lap1.specs.storage.includes('TB')) valS1 = s1 * 1000;
            if(lap2.specs.storage.includes('TB')) valS2 = s2 * 1000;
            renderRow('storage', valS1, valS2, lap1.specs.storage, lap2.specs.storage, false);

            // 4. PESO
            const w1 = parseNum(lap1.specs.weight);
            const w2 = parseNum(lap2.specs.weight);
            renderRow('weight', w1, w2, lap1.specs.weight, lap2.specs.weight, true);
        }

        btn.addEventListener('click', () => {
             if (select1.value === "" || select2.value === "") {
                alert(currentLang === 'es' ? "Selecciona dos modelos" : "Select two models");
                return;
            }
            runComparison();
            table.scrollIntoView({ behavior: 'smooth' });
        });

        function renderRow(id, val1, val2, text1, text2, lowerIsBetter) {
            const el1 = document.getElementById(id + '1');
            const el2 = document.getElementById(id + '2');
            el1.innerText = text1;
            el2.innerText = text2;
            el1.classList.remove('winner', 'loser');
            el2.classList.remove('winner', 'loser');

            if(val1 === val2) return;
            let win1 = lowerIsBetter ? val1 < val2 : val1 > val2;
            if(win1) { el1.classList.add('winner'); el2.classList.add('loser'); } 
            else { el1.classList.add('loser'); el2.classList.add('winner'); }
        }
    </script>
</body>
</html>