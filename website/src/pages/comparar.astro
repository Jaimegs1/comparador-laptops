---
import laptops from '../data/laptops.json';
---

<html lang="es-ES">
<head>
    <meta charset="utf-8" />
    <meta name="geo.region" content="ES" />
    <meta name="viewport" content="width=device-width" />
    <title>Comparador VS - Encuentra el Mejor Port√°til</title>
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DHN4XB4R6G"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-DHN4XB4R6G');
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style is:global>
        :root {
            --bg-body: #0f172a;
            --card-bg: rgba(30, 41, 59, 0.7);
            --accent: #818cf8;
            --text-main: #ffffff;
            --text-muted: #94a3b8;
            --win-color: #4ade80;
            --lose-color: #f87171;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body); color: var(--text-main);
            margin: 0; padding: 0; min-height: 100vh;
            background: radial-gradient(at 0% 0%, #4c1d95 0px, transparent 50%), 
                        radial-gradient(at 100% 0%, #3b82f6 0px, transparent 50%), #1e1b4b;
        }

        .navbar {
            display: flex; justify-content: space-between; align-items: center;
            padding: 20px 40px; background: rgba(15, 23, 42, 0.8); backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .logo { font-weight: 800; font-size: 1.2rem; text-decoration: none; color: white; }
        .back-btn { text-decoration: none; color: var(--text-muted); font-weight: 600; font-size: 0.9rem; }
        .back-btn:hover { color: white; }
        
        .container { max-width: 1000px; margin: 40px auto; padding: 0 20px; text-align: center; }

        h1 { font-size: 2.5rem; margin-bottom: 40px; background: linear-gradient(to right, #fff, #818cf8); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

        /* ESTILOS DEL BUSCADOR NUEVO */
        .vs-controls { display: flex; align-items: center; justify-content: center; gap: 20px; margin-bottom: 50px; flex-wrap: wrap; }
        
        .search-input { 
            background: var(--card-bg); 
            color: white; 
            border: 1px solid rgba(255,255,255,0.2); 
            padding: 15px; 
            border-radius: 12px; 
            font-size: 1rem; 
            width: 300px; 
            outline: none; 
            transition: border-color 0.2s;
        }
        .search-input:focus { border-color: var(--accent); background: rgba(30, 41, 59, 0.9); }
        .search-input::placeholder { color: rgba(255,255,255,0.4); }

        .vs-badge { background: var(--accent); color: white; font-weight: 800; padding: 10px 15px; border-radius: 50%; font-size: 1.2rem; box-shadow: 0 0 20px rgba(129, 140, 248, 0.5); }
        
        .btn-compare { background: white; color: black; border: none; padding: 12px 30px; font-weight: 700; border-radius: 100px; cursor: pointer; margin-top: 20px; transition: transform 0.2s; display: block; margin: 0 auto; }
        .btn-compare:hover { transform: scale(1.05); }

        .comparison-table { width: 100%; border-collapse: separate; border-spacing: 0 10px; display: none; margin-top: 40px; }
        .comparison-table th { color: var(--text-muted); padding: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px; }
        .col-laptop { width: 40%; background: rgba(255,255,255,0.03); padding: 20px; border-radius: 10px; vertical-align: middle; transition: 0.3s; }
        .col-label { width: 20%; color: var(--accent); font-weight: 700; font-size: 0.9rem; }
        .laptop-img { width: 100%; height: 150px; object-fit: contain; margin-bottom: 15px; }
        .winner { color: var(--win-color); font-weight: 700; text-shadow: 0 0 10px rgba(74, 222, 128, 0.3); }
        .loser { color: var(--text-muted); opacity: 0.6; text-decoration: line-through; }
        
        .btn-amazon {
            display: inline-flex; align-items: center; justify-content: center; gap: 8px;
            padding: 14px 24px; border-radius: 12px; 
            text-decoration: none; font-weight: 800; font-size: 1rem;
            transition: all 0.3s ease; width: 90%; max-width: 280px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-top: 10px;
        }
        .btn-amazon:hover { transform: translateY(-3px); box-shadow: 0 6px 12px rgba(0,0,0,0.2); }
        
        .btn-highlight { 
            background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
            color: white !important; 
            box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
            border: none;
        }
        .btn-highlight:hover {
            box-shadow: 0 6px 20px rgba(245, 158, 11, 0.5);
        }
        
        .btn-ghost { 
            background: linear-gradient(135deg, #334155 0%, #1e293b 100%);
            color: #e2e8f0 !important; 
            border: 1px solid rgba(255,255,255,0.1);
        }
        .btn-ghost:hover { 
            background: linear-gradient(135deg, #475569 0%, #334155 100%);
            color: white !important; border-color: rgba(255,255,255,0.2);
        }

        @media (max-width: 768px) { .vs-controls { flex-direction: column; } .search-input { width: 100%; } }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="logo">‚ö° LaptopComparator</a>
        <a href="/" class="back-btn">‚Üê Volver al inicio</a>
    </nav>

    <div class="container">
        <h1>Cara a Cara</h1>
        <p style="color: #94a3b8; margin-bottom: 30px;">Escribe el nombre del modelo para buscarlo y compararlo.</p>

        <div class="vs-controls">
            <input list="laptops-list" id="input1" class="search-input" placeholder="üîç Escribe el Modelo A...">
            
            <div class="vs-badge">VS</div>

            <input list="laptops-list" id="input2" class="search-input" placeholder="üîç Escribe el Modelo B...">

            <datalist id="laptops-list">
                {laptops.map((laptop) => (
                    <option value={laptop.name}></option>
                ))}
            </datalist>
        </div>

        <button class="btn-compare" id="compareBtn">Comparar Ahora üî•</button>

        <table class="comparison-table" id="resultsTable">
            <thead>
                <tr>
                    <th id="name1">Modelo A</th>
                    <th>Especificaci√≥n</th>
                    <th id="name2">Modelo B</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-laptop"><img id="img1" src="" class="laptop-img"></td>
                    <td class="col-label">DISE√ëO</td>
                    <td class="col-laptop"><img id="img2" src="" class="laptop-img"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="price1"></td>
                    <td class="col-label">PRECIO</td>
                    <td class="col-laptop data-point" id="price2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="cpu1"></td>
                    <td class="col-label">CPU</td>
                    <td class="col-laptop data-point" id="cpu2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="ram1"></td>
                    <td class="col-label">RAM</td>
                    <td class="col-laptop data-point" id="ram2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="storage1"></td>
                    <td class="col-label">DISCO</td>
                    <td class="col-laptop data-point" id="storage2"></td>
                </tr>
                <tr>
                    <td class="col-laptop data-point" id="weight1"></td>
                    <td class="col-label">PESO</td>
                    <td class="col-laptop data-point" id="weight2"></td>
                </tr>
                <tr>
                    <td class="col-laptop" id="buy1-container"></td>
                    <td class="col-label">üõí</td>
                    <td class="col-laptop" id="buy2-container"></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script define:vars={{ laptops }}>
        const btn = document.getElementById('compareBtn');
        const table = document.getElementById('resultsTable');
        const input1 = document.getElementById('input1');
        const input2 = document.getElementById('input2');

        const parseNum = (str) => {
            if(!str) return 0;
            const match = str.toString().match(/(\d+(\.\d+)?)/);
            return match ? parseFloat(match[0]) : 0;
        };

        function runComparison() {
            // Buscamos el √≠ndice basado en el nombre que escribi√≥ el usuario
            const name1 = input1.value;
            const name2 = input2.value;

            const idx1 = laptops.findIndex(l => l.name === name1);
            const idx2 = laptops.findIndex(l => l.name === name2);

            // Validaci√≥n mejorada: Si no encuentra el nombre exacto
            if (idx1 === -1 || idx2 === -1) {
                alert("Por favor, selecciona un modelo v√°lido de la lista desplegable.");
                return;
            }

            const lap1 = laptops[idx1];
            const lap2 = laptops[idx2];
            table.style.display = "table";
            
            // IM√ÅGENES & SEO DIN√ÅMICO
            const img1 = document.getElementById('img1');
            const img2 = document.getElementById('img2');
            
            img1.src = lap1.brand_img;
            img2.src = lap2.brand_img;
            
            // Inyectamos keywords para que Google lea qu√© se est√° comparando
            img1.alt = `Comparativa: ${lap1.name} vs ${lap2.name} - Vista ${lap1.name}`;
            img2.alt = `Comparativa: ${lap1.name} vs ${lap2.name} - Vista ${lap2.name}`;

            document.getElementById('name1').innerText = lap1.name;
            document.getElementById('name2').innerText = lap2.name;

            // 1. PRECIO (Siempre en Euros)
            let p1 = parseFloat(lap1.price_eur);
            let p2 = parseFloat(lap2.price_eur);
            renderRow('price', p1, p2, p1 + " ‚Ç¨", p2 + " ‚Ç¨", true);

            // 2. CPU
            const cpuScore1 = lap1.cpu_score || 0;
            const cpuScore2 = lap2.cpu_score || 0;
            renderRow('cpu', cpuScore1, cpuScore2, lap1.specs.cpu, lap2.specs.cpu, false);

            // 3. RAM
            const r1 = parseNum(lap1.specs.ram);
            const r2 = parseNum(lap2.specs.ram);
            renderRow('ram', r1, r2, lap1.specs.ram, lap2.specs.ram, false);

            // 4. STORAGE
            const s1 = parseNum(lap1.specs.storage);
            const s2 = parseNum(lap2.specs.storage);
            let valS1 = s1; let valS2 = s2;
            if(lap1.specs.storage.includes('TB')) valS1 = s1 * 1000;
            if(lap2.specs.storage.includes('TB')) valS2 = s2 * 1000;
            renderRow('storage', valS1, valS2, lap1.specs.storage, lap2.specs.storage, false);

            // 5. PESO
            const w1 = parseNum(lap1.specs.weight);
            const w2 = parseNum(lap2.specs.weight);
            renderRow('weight', w1, w2, lap1.specs.weight, lap2.specs.weight, true);

            // 6. BOTONES DE COMPRA
            const tag = "comparadorjai-21";
            const link1 = `https://www.amazon.es/s?k=${lap1.name.replace(/ /g, '+')}&tag=${tag}`;
            const link2 = `https://www.amazon.es/s?k=${lap2.name.replace(/ /g, '+')}&tag=${tag}`;

            const is1Cheaper = p1 <= p2;
            const btnClass1 = is1Cheaper ? 'btn-highlight' : 'btn-ghost';
            const btnClass2 = !is1Cheaper ? 'btn-highlight' : 'btn-ghost';
            
            document.getElementById('buy1-container').innerHTML = 
                `<a href="${link1}" target="_blank" class="btn-amazon ${btnClass1}">Ver Precio ‚ûö</a>`;
            
            document.getElementById('buy2-container').innerHTML = 
                `<a href="${link2}" target="_blank" class="btn-amazon ${btnClass2}">Ver Precio ‚ûö</a>`;
        }

        btn.addEventListener('click', () => {
             if (input1.value === "" || input2.value === "") {
                alert("Escribe el nombre de dos port√°tiles para comparar.");
                return;
            }
            runComparison();
            table.scrollIntoView({ behavior: 'smooth' });
        });

        function renderRow(id, val1, val2, text1, text2, lowerIsBetter) {
            const el1 = document.getElementById(id + '1');
            const el2 = document.getElementById(id + '2');
            el1.innerText = text1;
            el2.innerText = text2;
            el1.classList.remove('winner', 'loser');
            el2.classList.remove('winner', 'loser');

            if(val1 === val2) return;
            let win1 = lowerIsBetter ? val1 < val2 : val1 > val2;
            if(win1) { el1.classList.add('winner'); el2.classList.add('loser'); } 
            else { el1.classList.add('loser'); el2.classList.add('winner'); }
        }
    </script>
</body>
</html>