---
import laptops from '../../data/database.json';
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Comparador de Port√°tiles para Ingenier√≠a</title>
    
    <style>
        :root { --primary: #0071e3; --bg: #f5f5f7; --text: #1d1d1f; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; 
            background-color: var(--bg); 
            color: var(--text); 
            margin: 0; 
            padding: 20px; 
        }

        /* Header */
        header { text-align: center; margin-bottom: 50px; padding-top: 40px; }
        h1 { font-size: 3rem; font-weight: 700; letter-spacing: -0.02em; margin-bottom: 10px; }
        p.subtitle { color: #86868b; font-size: 1.3rem; font-weight: 400; }

        /* Grid */
        .grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); 
            gap: 30px; 
            max-width: 1400px; 
            margin: 0 auto; 
        }

        /* Tarjeta */
        .card { 
            background: white; 
            border-radius: 20px; 
            padding: 35px 30px; 
            box-shadow: 0 4px 6px rgba(0,0,0,0.02); 
            transition: all 0.3s ease; 
            display: flex; 
            flex-direction: column; 
            justify-content: space-between; 
            border: 1px solid rgba(0,0,0,0.04);
        }
        
        .card:hover { 
            transform: translateY(-8px); 
            box-shadow: 0 20px 40px rgba(0,0,0,0.08); 
        }

        /* Elementos de la tarjeta */
        .brand-logo { height: 35px; object-fit: contain; margin-bottom: 20px; display: block; }
        
        h2 { 
            font-size: 1.25rem; 
            font-weight: 600; 
            margin: 0 0 20px 0; 
            line-height: 1.4; 
            color: #1d1d1f;
        }

        .specs-container { 
            display: flex; 
            flex-wrap: wrap; 
            gap: 8px; 
            margin-bottom: 25px; 
        }
        
        .spec-tag { 
            background: #f5f5f7; 
            color: #515154; 
            padding: 6px 12px; 
            border-radius: 8px; 
            font-size: 0.85rem; 
            font-weight: 500; 
        }

        .price-container { 
            margin-top: auto; 
            padding-top: 20px; 
            border-top: 1px solid #f0f0f0; 
            display: flex; 
            justify-content: space-between; 
            align-items: center; 
        }

        .price { 
            font-size: 1.5rem; 
            font-weight: 700; 
            color: #111; 
        }

        .btn { 
            background: var(--primary); 
            color: white; 
            text-decoration: none; 
            padding: 10px 20px; 
            border-radius: 20px; 
            font-size: 0.9rem; 
            font-weight: 500; 
            transition: background 0.2s; 
        }
        .btn:hover { background: #005bb5; }

        /* Responsive */
        @media (max-width: 600px) {
            h1 { font-size: 2rem; }
            .grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>

    <header>
        <h1>üíª Comparador Tech</h1>
        <p class="subtitle">Encuentra tu port√°til ideal para ingenier√≠a al mejor precio.</p>
    </header>

    <main class="grid">
        {laptops.map((laptop) => (
            <article class="card">
                {laptop.brand_img && (
                    <img src={laptop.brand_img} alt="Marca" class="brand-logo" loading="lazy" />
                )}

                <h2>{laptop.name}</h2>

                <div class="specs-container">
                    <span class="spec-tag">üß† {laptop.specs.ram}</span>
                    <span class="spec-tag">üíæ {laptop.specs.storage}</span>
                    {laptop.specs.cpu && <span class="spec-tag">‚öôÔ∏è {laptop.specs.cpu}</span>}
                </div>

                <div class="price-container">
                    <span class="price">{laptop.price_eur} ‚Ç¨</span>
                    <a href={laptop.affiliate_link} target="_blank" rel="nofollow sponsored" class="btn">
                        Ver oferta
                    </a>
                </div>
            </article>
        ))}
    </main>

</body>
</html>