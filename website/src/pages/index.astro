        .nav-links { display: flex; gap: 25px; font-size: 0.85rem; font-weight: 600; color: #e2e8f0; align-items: center; }
        .nav-btn { cursor: pointer; transition: color 0.3s; }
        .nav-btn:hover { color: white; }
        .nav-vs-link { color: #4ade80; text-decoration: none; display: flex; align-items: center; gap: 5px; transition: transform 0.2s; }
        .nav-vs-link:hover { transform: scale(1.05); color: #86efac; }
        
        /* LANGUAGE SWITCHER */
