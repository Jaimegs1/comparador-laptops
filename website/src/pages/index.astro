---
import laptops from '../data/laptops.json';

function getScore(price) {
    if (price > 1200) return 99;
    if (price > 900) return 97;
    if (price > 700) return 94;
    return 89;
}
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Laptop Comparator - Encuentra tu Port√°til Ideal</title>
    <meta name="description" content="Comparador de port√°tiles. Ofertas Gaming, Estudiantes y Ultrabooks." />
    <meta name="google-site-verification" content="2V-eMT8DSm87ZaDNiAstEAIKi23tsD6-6IWgdFrmqyo" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-body: #0f172a;
            --card-bg: rgba(255, 255, 255, 0.05);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-main: #ffffff;
