import laptops from '../data/laptops.json';

// Funci√≥n para asignar puntuaci√≥n visual
function getScore(price) {
    if (price > 1200) return 99;
    if (price > 900) return 97;
    if (price > 700) return 94;
    return 89;
}
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Laptop Comparator - Encuentra tu Port√°til Ideal</title>
    <meta name="description" content="Comparador de port√°tiles con precios actualizados. Encuentra ofertas Gaming, Estudiantes y Ultrabooks." />
    <meta name="robots" content="index, follow" />
    
    <meta name="google-site-verification" content="2V-eMT8DSm87ZaDNiAstEAIKi23tsD6-6IWgdFrmqyo" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Paleta Dark Mode Premium */
            --bg-dark: #0f0c29;
            --bg-gradient: linear-gradient(to right, #0f0c29, #302b63, #24243e);
            --card-bg: rgba(255, 255, 255, 0.03);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-main: #ffffff;
            --text-muted: #9ca3af;
            --accent: #8b5cf6; /* Violeta */
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: var(--bg-dark);
            background-image: var(--bg-gradient);
            color: var(--text-main);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* --- NAVBAR FLOTANTE --- */
        .navbar {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 1000px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 30px;
            background: rgba(15, 12, 41, 0.6);
            backdrop-filter: blur(16px);
            border: 1px solid var(--card-border);
            border-radius: 100px;
            z-index: 1000;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .logo { 
            font-size: 1.1rem; 
            font-weight: 800; 
            background: linear-gradient(90deg, #fff, #a5b4fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            cursor: pointer;
        }
        
        .nav-links { display: flex; gap: 25px; font-size: 0.85rem; font-weight: 600; color: #cbd5e1; }
        .nav-btn { cursor: pointer; transition: color 0.3s; position: relative; }
        .nav-btn:hover { color: white; }
        .nav-btn::after {
            content: ''; position: absolute; bottom: -5px; left: 0; width: 0; height: 2px;
            background: var(--accent); transition: width 0.3s;
        }
        .nav-btn:hover::after { width: 100%; }

        /* --- HERO SECTION CON IMAGEN DE FONDO (CORREGIDO) --- */
        .hero {
            position: relative;
            min-height: 85vh; /* Ocupa casi toda la pantalla */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 0 20px;
            overflow: hidden;

            /* AQU√ç ESTABA EL ERROR: He bajado la opacidad al 0.5 (50%) para que se vea la foto */
            background: 
                linear-gradient(to bottom, rgba(15, 12, 41, 0.5), rgba(15, 12, 41, 1)), 
                url('https://images.unsplash.com/photo-1517336714731-489689fd1ca4?q=80&w=1926&auto=format&fit=crop');
            
            background-size: cover;
            background-position: center;
            background-attachment: fixed; /* Efecto Parallax */
            border-bottom: 1px solid var(--card-border);
        }

        .badge-pill {
            background: rgba(139, 92, 246, 0.15);
            border: 1px solid rgba(139, 92, 246, 0.3);
            color: #d8b4fe;
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 25px;
            display: inline-block;
            backdrop-filter: blur(5px);
        }

        h1 { 
            font-size: 4.5rem; 
            font-weight: 800; 
            margin: 0; 
            line-height: 1.1; 
            letter-spacing: -2px; 
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #fff 30%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        p.subtitle { 
            color: #94a3b8; 
            font-size: 1.25rem; 
            max-width: 600px; 
            margin: 25px auto 40px; 
            line-height: 1.6;
        }

        .cta-container {
            display: flex;
            gap: 15px;
        }

        .btn-primary {
            background: white;
            color: black;
            padding: 14px 32px;
            border-radius: 12px;
            font-weight: 700;
            text-decoration: none;
            transition: transform 0.2s, box-shadow 0.2s;
            border: none;
            cursor: pointer;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255,255,255,0.2);
        }

        .btn-ghost {
            background: rgba(255,255,255,0.05);
            color: white;
            padding: 14px 32px;
            border-radius: 12px;
            font-weight: 600;
            border: 1px solid rgba(255,255,255,0.1);
            cursor: pointer;
            transition: background 0.2s;
        }
        .btn-ghost:hover { background: rgba(255,255,255,0.1); }

        /* --- LAYOUT PRINCIPAL --- */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px 100px;
            display: flex;
            gap: 40px;
        }

        .sidebar { width: 240px; display: none; }
        @media (min-width: 1000px) { .sidebar { display: block; } }

        .filter-box {
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 20px;
        }
        .filter-title { font-weight: 700; margin-bottom: 15px; display: block; color: white; font-size: 0.9rem; letter-spacing: 0.5px; text-transform: uppercase; }
        
        .filter-item { 
            display: block; 
            color: var(--text-muted); 
            margin-bottom: 12px; 
            font-size: 0.95rem; 
            cursor: pointer; 
            transition: all 0.2s;
        }
        .filter-item:hover { color: white; transform: translateX(5px); }

        /* --- GRID DE PRODUCTOS --- */
        .grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 30px;
            position: relative;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        .card:hover { 
            transform: translateY(-8px); 
            border-color: rgba(139, 92, 246, 0.5);
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
            background: rgba(255,255,255,0.06);
        }

        .score-badge {
            position: absolute; top: 20px; right: 20px;
            width: 45px; height: 45px;
            background: #2563eb;
            color: white; border-radius: 12px;
            display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            font-weight: 800; font-size: 1rem; line-height: 1;
            box-shadow: 0 4px 15px rgba(37, 99, 235, 0.4); z-index: 10;
        }
        .score-label { font-size: 0.55rem; font-weight: 500; opacity: 0.8; margin-top: 2px; }

        .product-img {
            width: 100%; height: 200px; object-fit: contain;
            margin: 10px 0 25px; 
            filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
            transition: transform 0.3s;
        }
        .card:hover .product-img { transform: scale(1.05); }

        h2 { font-size: 1.25rem; font-weight: 700; margin: 0 0 15px 0; line-height: 1.4; height: 3.5em; overflow: hidden; }

        .specs-grid { 
            display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-bottom: 25px; 
            background: rgba(0,0,0,0.2); padding: 10px; border-radius: 10px;
        }
        .spec-item { font-size: 0.85rem; color: #cbd5e1; display: flex; align-items: center; gap: 6px; }

        .price-row {
            margin-top: auto; display: flex; justify-content: space-between;
            align-items: center; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 20px;
        }

        .price { font-size: 1.6rem; font-weight: 800; color: white; letter-spacing: -1px; }
        
        .btn-card {
            background: white; color: black; padding: 10px 20px;
            border-radius: 8px; font-weight: 700; text-decoration: none;
            font-size: 0.9rem; transition: background 0.2s;
        }
        .btn-card:hover { background: #e2e8f0; }

        /* Responsive Mobile */
        @media (max-width: 768px) {
            h1 { font-size: 2.5rem; }
            .navbar { width: 85%; padding: 12px 20px; }
            .logo { font-size: 0.9rem; }
            .nav-links { display: none; } /* Ocultar links en m√≥vil por ahora */
            .main-container { padding-top: 20px; }
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <div class="logo" id="reset-home">‚ö° LaptopComparator</div>
        <div class="nav-links">
            <span class="nav-btn" id="nav-top">Top Ventas</span>
            <span class="nav-btn" id="nav-gaming">Gaming</span>
            <span class="nav-btn" id="nav-student">Estudiantes</span>
        </div>
    </nav>

    <section class="hero">
        <div class="badge-pill">‚ú® Algoritmo v2.0 Actualizado</div>
        <h1>Laptop <span class="gradient-text">Comparator</span></h1>
        <p class="subtitle">La herramienta definitiva para ingenieros y estudiantes. Filtra el marketing, encuentra la potencia real y ahorra dinero.</p>
        
        <div class="cta-container">
            <button class="btn-primary" onclick="document.getElementById('laptops-grid').scrollIntoView({behavior: 'smooth'})">
                Ver Cat√°logo üëá
            </button>
            <a href="https://twitter.com" target="_blank" class="btn-ghost">
                Saber m√°s
            </a>
        </div>
    </section>

    <div class="main-container">
        <aside class="sidebar">
            <div class="filter-box">
                <span class="filter-title">Ordenar Por</span>
                <div class="filter-item" id="sort-score">‚ö° Mejor Puntuaci√≥n</div>
                <div class="filter-item" id="sort-price-asc">üí∞ Precio: Bajo a Alto</div>
                <div class="filter-item" id="sort-price-desc">üíé Precio: Alto a Bajo</div>
            </div>

            <div class="filter-box">
                <span class="filter-title">Rango de Precio</span>
                <div class="filter-item" id="filter-all">üîÑ Ver Todos</div>
                <div class="filter-item" id="filter-under-500">üìâ Menos de 500‚Ç¨</div>
                <div class="filter-item" id="filter-under-800">‚öñÔ∏è Menos de 800‚Ç¨</div>
                <div class="filter-item" id="filter-over-1000">üöÄ Gama Alta (+1000‚Ç¨)</div>
            </div>
        </aside>

        <main class="grid" id="laptops-grid">
            {laptops.map((laptop) => (
                <article class="card" 
                    data-price={laptop.price_eur} 
                    data-score={getScore(laptop.price_eur)}
                    data-category={laptop.category}
                >
                    <div class="score-badge">
                        {getScore(laptop.price_eur)}
                        <span class="score-label">PTS</span>
                    </div>

                    <img src={laptop.brand_img} alt={laptop.name} class="product-img" />
                    
                    <h2>{laptop.name}</h2>
                    
                    <div class="specs-grid">
                        <div class="spec-item">üß† {laptop.specs.cpu}</div>
                        <div class="spec-item">üíæ {laptop.specs.ram}</div>
                        <div class="spec-item">üíø {laptop.specs.storage}</div>
                        <div class="spec-item">‚öñÔ∏è {laptop.specs.weight}</div>
                    </div>

                    <div class="price-row">
                        <span class="price">{laptop.price_eur} ‚Ç¨</span>
                        <a href={`/laptops/${laptop.slug}`} class="btn-card">Ver Ficha</a>
                    </div>
                </article>
            ))}
        </main>
    </div>

    <script>
        const grid = document.getElementById('laptops-grid');
        const cards = Array.from(document.querySelectorAll('.card'));
        const navTop = document.getElementById('nav-top');
        const navGaming = document.getElementById('nav-gaming');
        const navStudent = document.getElementById('nav-student');
        const logo = document.getElementById('reset-home');

        function filterByCategory(category) {
            cards.forEach(card => {
                const categories = card.dataset.category || "";
                if (categories.includes(category)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
            grid.scrollIntoView({behavior: 'smooth'});
        }

        if(navTop) navTop.addEventListener('click', () => filterByCategory('top'));
        if(navGaming) navGaming.addEventListener('click', () => filterByCategory('gaming'));
        if(navStudent) navStudent.addEventListener('click', () => filterByCategory('student'));
        if(logo) logo.addEventListener('click', () => {
            cards.forEach(card => card.style.display = 'flex');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        document.getElementById('sort-score').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.score - a.dataset.score);
            updateGrid(sorted);
        });

        document.getElementById('sort-price-asc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => a.dataset.price - b.dataset.price);
            updateGrid(sorted);
        });

        document.getElementById('sort-price-desc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.price - a.dataset.price);
            updateGrid(sorted);
        });

        document.getElementById('filter-all').addEventListener('click', () => cards.forEach(c => c.style.display = 'flex'));
        document.getElementById('filter-under-500').addEventListener('click', () => filterByPrice(0, 500));
        document.getElementById('filter-under-800').addEventListener('click', () => filterByPrice(0, 800));
        document.getElementById('filter-over-1000').addEventListener('click', () => filterByPrice(1000, 99999));

        function filterByPrice(min, max) {
            cards.forEach(card => {
                const price = parseFloat(card.dataset.price);
                if (price >= min && price <= max) card.style.display = 'flex';
                else card.style.display = 'none';
            });
        }

        function updateGrid(sortedCards) {
            grid.innerHTML = '';
            sortedCards.forEach(card => {
                card.style.display = 'flex';
                grid.appendChild(card);
            });
        }
    </script>
</body>
</html>