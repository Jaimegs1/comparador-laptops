import laptops from '../data/laptops.json';

// Funci√≥n para asignar puntuaci√≥n visual
function getScore(price) {
    if (price > 1200) return 99;
    if (price > 900) return 97;
    if (price > 700) return 94;
    return 89;
}
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Comparador Tech - Los Mejores Port√°tiles Calidad-Precio 2025</title>
    <meta name="description" content="Comparador de port√°tiles con precios actualizados. Encuentra ofertas Gaming, Estudiantes y Ultrabooks." />
    <meta name="robots" content="index, follow" />
    
    <meta name="google-site-verification" content="2V-eMT8DSm87ZaDNiAstEAIKi23tsD6-6IWgdFrmqyo" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-gradient: linear-gradient(135deg, #1a0b2e 0%, #2d1b4e 100%);
            --card-bg: #ffffff;
            --primary: #4f46e5;
            --text-main: #111827;
            --text-muted: #6b7280;
            --score-color: #2563eb;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-gradient);
            color: white;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 40px;
            background: rgba(0,0,0,0.2);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .logo { font-size: 1.5rem; font-weight: 800; letter-spacing: -1px; cursor: pointer; }
        .nav-links { display: flex; gap: 20px; font-size: 0.9rem; font-weight: 600; color: #ccc; }
        
        .nav-btn { cursor: pointer; transition: color 0.3s; }
        .nav-btn:hover, .nav-btn.active { color: #fff; text-shadow: 0 0 10px rgba(255,255,255,0.5); }

        header { text-align: center; padding: 60px 20px; }
        h1 { font-size: 3.5rem; font-weight: 800; margin: 0; line-height: 1.1; }
        p.subtitle { color: #a5b4fc; font-size: 1.2rem; margin-top: 10px; }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px 60px;
            display: flex;
            gap: 30px;
        }

        .sidebar { width: 250px; display: none; }
        @media (min-width: 1000px) { .sidebar { display: block; } }

        .filter-box {
            background: rgba(255,255,255,0.05);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .filter-title { font-weight: bold; margin-bottom: 15px; display: block; }
        
        .filter-item { 
            display: block; 
            color: #ccc; 
            margin-bottom: 12px; 
            font-size: 0.9rem; 
            cursor: pointer; 
            transition: color 0.2s;
        }
        .filter-item:hover { color: white; text-decoration: underline; }

        .grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }

        .card {
            background: var(--card-bg);
            color: var(--text-main);
            border-radius: 16px;
            padding: 25px;
            position: relative;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            flex-direction: column;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .card:hover { transform: translateY(-5px); box-shadow: 0 20px 40px rgba(0,0,0,0.2); }

        .score-badge {
            position: absolute; top: 20px; right: 20px;
            width: 50px; height: 50px;
            background: var(--score-color);
            color: white; border-radius: 50%;
            display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            font-weight: 800; font-size: 1.1rem; line-height: 1;
            box-shadow: 0 4px 10px rgba(37, 99, 235, 0.3); z-index: 10;
        }
        .score-label { font-size: 0.6rem; font-weight: 400; opacity: 0.9; }

        .product-img {
            width: 100%; height: 180px; object-fit: contain;
            margin: 20px 0; filter: drop-shadow(0 5px 15px rgba(0,0,0,0.1));
        }

        h2 { font-size: 1.1rem; font-weight: 700; margin: 0 0 10px 0; line-height: 1.4; height: 3em; overflow: hidden; }

        .specs-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-bottom: 20px; }
        .spec-item { font-size: 0.85rem; color: var(--text-muted); display: flex; align-items: center; gap: 6px; }

        .price-row {
            margin-top: auto; display: flex; justify-content: space-between;
            align-items: center; border-top: 1px solid #eee; padding-top: 15px;
        }

        .price { font-size: 1.5rem; font-weight: 800; color: #111; }
        
        .btn {
            background: var(--primary); color: white; padding: 8px 16px;
            border-radius: 8px; font-weight: 600; text-decoration: none;
            font-size: 0.9rem; transition: background 0.2s;
        }
        .btn:hover { background: #3730a3; }
    </style>
</head>
<body>

    <nav class="navbar">
        <div class="logo" id="reset-home">‚ö° Comparador.pro</div>
        <div class="nav-links">
            <span class="nav-btn" id="nav-top">TOP VENTAS</span>
            <span class="nav-btn" id="nav-gaming">GAMING</span>
            <span class="nav-btn" id="nav-student">ESTUDIANTES</span>
        </div>
    </nav>

    <header>
        <h1>Comparaci√≥n de Port√°tiles</h1>
        <p class="subtitle">An√°lisis t√©cnico para ingenieros. Sin publicidad enga√±osa.</p>
    </header>

    <div class="main-container">
        <aside class="sidebar">
            <div class="filter-box">
                <span class="filter-title">ORDENAR POR</span>
                <div class="filter-item" id="sort-score">‚ö° Puntuaci√≥n (Mejor a Peor)</div>
                <div class="filter-item" id="sort-price-asc">üí∞ Precio: Bajo a Alto</div>
                <div class="filter-item" id="sort-price-desc">üíé Precio: Alto a Bajo</div>
            </div>

            <div class="filter-box">
                <span class="filter-title">RANGO DE PRECIO</span>
                <div class="filter-item" id="filter-all">üîÑ Ver Todos</div>
                <div class="filter-item" id="filter-under-500">üìâ Menos de 500‚Ç¨</div>
                <div class="filter-item" id="filter-under-800">‚öñÔ∏è Menos de 800‚Ç¨</div>
                <div class="filter-item" id="filter-over-1000">üöÄ Gama Alta (+1000‚Ç¨)</div>
            </div>
        </aside>

        <main class="grid" id="laptops-grid">
            {laptops.map((laptop) => (
                <article class="card" 
                    data-price={laptop.price_eur} 
                    data-score={getScore(laptop.price_eur)}
                    data-category={laptop.category}
                >
                    <div class="score-badge">
                        {getScore(laptop.price_eur)}
                        <span class="score-label">PTS</span>
                    </div>

                    <img src={laptop.brand_img} alt={laptop.name} class="product-img" />
                    
                    <h2>{laptop.name}</h2>
                    
                    <div class="specs-grid">
                        <div class="spec-item">üß† {laptop.specs.cpu}</div>
                        <div class="spec-item">üíæ {laptop.specs.ram}</div>
                        <div class="spec-item">üíø {laptop.specs.storage}</div>
                        <div class="spec-item">‚öñÔ∏è {laptop.specs.weight}</div>
                    </div>

                    <div class="price-row">
                        <span class="price">{laptop.price_eur} ‚Ç¨</span>
                        <a href={`/laptops/${laptop.slug}`} class="btn">Ver Ficha</a>
                    </div>
                </article>
            ))}
        </main>
    </div>

    <script>
        // ELEMENTOS
        const grid = document.getElementById('laptops-grid');
        const cards = Array.from(document.querySelectorAll('.card'));
        
        // --- 1. FILTRADO POR CATEGOR√çA (NAVBAR) ---
        const navTop = document.getElementById('nav-top');
        const navGaming = document.getElementById('nav-gaming');
        const navStudent = document.getElementById('nav-student');
        const logo = document.getElementById('reset-home');

        function filterByCategory(category) {
            cards.forEach(card => {
                const categories = card.dataset.category || "";
                if (categories.includes(category)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        navTop.addEventListener('click', () => filterByCategory('top'));
        navGaming.addEventListener('click', () => filterByCategory('gaming'));
        navStudent.addEventListener('click', () => filterByCategory('student'));
        
        // Reset al pulsar el logo
        logo.addEventListener('click', () => {
            cards.forEach(card => card.style.display = 'flex');
        });

        // --- 2. ORDENACI√ìN ---
        document.getElementById('sort-score').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.score - a.dataset.score);
            updateGrid(sorted);
        });

        document.getElementById('sort-price-asc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => a.dataset.price - b.dataset.price);
            updateGrid(sorted);
        });

        document.getElementById('sort-price-desc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.price - a.dataset.price);
            updateGrid(sorted);
        });

        // --- 3. FILTRO DE PRECIOS ---
        document.getElementById('filter-all').addEventListener('click', () => {
            cards.forEach(card => card.style.display = 'flex');
        });

        document.getElementById('filter-under-500').addEventListener('click', () => {
            filterByPrice(0, 500);
        });
        
        document.getElementById('filter-under-800').addEventListener('click', () => {
            filterByPrice(0, 800);
        });

        document.getElementById('filter-over-1000').addEventListener('click', () => {
            filterByPrice(1000, 99999);
        });

        function filterByPrice(min, max) {
            cards.forEach(card => {
                const price = parseFloat(card.dataset.price);
                if (price >= min && price <= max) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Helper para repintar
        function updateGrid(sortedCards) {
            grid.innerHTML = '';
            sortedCards.forEach(card => {
                card.style.display = 'flex'; // Aseguramos que se vea al reordenar
                grid.appendChild(card);
            });
        }
    </script>
</body>
</html>