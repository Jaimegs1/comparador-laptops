---
import laptops from '../data/laptops.json';

function getScore(price) {
    if (price > 1200) return 99;
    if (price > 900) return 97;
    if (price > 700) return 94;
    return 89;
}
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Laptop Comparator - Encuentra tu Port√°til Ideal</title>
    <meta name="description" content="Comparador de port√°tiles. Ofertas Gaming, Estudiantes y Ultrabooks." />
    
    <meta name="google-site-verification" content="2V-eMT8DSm87ZaDNiAstEAIKi23tsD6-6IWgdFrmqyo" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Paleta VIVA (Mesh Gradient Theme) */
            --bg-body: #0f172a; /* Azul noche */
            --card-bg: rgba(255, 255, 255, 0.05);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-main: #ffffff;
            --text-muted: #cbd5e1;
            --accent: #818cf8; /* Indigo claro */
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* --- NAVBAR --- */
        .navbar {
            position: fixed;
            top: 20px; left: 50%; transform: translateX(-50%);
            width: 90%; max-width: 1100px; /* Un poco m√°s ancho para que quepa el nuevo bot√≥n */
            display: flex; justify-content: space-between; align-items: center;
            padding: 12px 30px;
            background: rgba(15, 23, 42, 0.7);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 100px;
            z-index: 1000;
        }

        .logo { font-size: 1.1rem; font-weight: 800; color: white; cursor: pointer; }
        
        .nav-links { display: flex; gap: 25px; font-size: 0.85rem; font-weight: 600; color: #e2e8f0; align-items: center; }
        
        .nav-btn { cursor: pointer; transition: color 0.3s; }
        .nav-btn:hover { color: white; text-shadow: 0 0 10px rgba(255,255,255,0.4); }

        /* Estilo especial para el bot√≥n del comparador */
        .btn-vs {
            color: #4ade80; /* Verde ne√≥n */
            text-decoration: none;
            display: flex; align-items: center; gap: 5px;
            transition: transform 0.2s;
        }
        .btn-vs:hover { transform: scale(1.05); color: #86efac; }

        /* --- HERO SECTION CON "MESH GRADIENT" --- */
        .hero {
            position: relative;
            min-height: 85vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 0 20px;
            overflow: hidden;
            
            /* Fondo Degradado Vivo generado por c√≥digo */
            background: radial-gradient(at 0% 0%, #4c1d95 0px, transparent 50%), 
                        radial-gradient(at 100% 0%, #3b82f6 0px, transparent 50%), 
                        #1e1b4b;
            
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .badge-pill {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #e0e7ff;
            padding: 6px 16px; border-radius: 50px;
            font-size: 0.8rem; font-weight: 600;
            margin-bottom: 30px;
            backdrop-filter: blur(4px);
        }

        h1 { 
            font-size: 5rem; font-weight: 800; margin: 0; 
            line-height: 1; letter-spacing: -2px; 
            color: #ffffff;
            text-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        
        p.subtitle { 
            color: #e2e8f0; font-size: 1.3rem; 
            max-width: 600px; margin: 30px auto 45px; 
            line-height: 1.6;
        }

        .cta-container { display: flex; gap: 15px; }

        .btn-primary {
            background: white; color: #1e1b4b; padding: 16px 40px;
            border-radius: 100px; font-weight: 800; border: none; cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
        .btn-primary:hover { transform: scale(1.05); }

        .btn-ghost {
            background: rgba(255,255,255,0.1); color: white;
            padding: 16px 40px; border-radius: 100px; font-weight: 600;
            border: 1px solid rgba(255,255,255,0.2); cursor: pointer; text-decoration: none;
            transition: background 0.2s;
        }
        .btn-ghost:hover { background: rgba(255,255,255,0.2); }

        /* --- RESTO DE LA WEB --- */
        .main-container {
            max-width: 1400px; margin: 0 auto; padding: 60px 20px 100px;
            display: flex; gap: 50px;
        }

        .sidebar { width: 260px; display: none; }
        @media (min-width: 1000px) { .sidebar { display: block; } }

        .filter-box { background: transparent; border: none; padding: 0; margin-bottom: 40px; }
        .filter-title { font-weight: 700; margin-bottom: 20px; display: block; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; color: #94a3b8; }
        .filter-item { display: block; color: var(--text-muted); margin-bottom: 14px; cursor: pointer; transition: 0.2s; font-size: 1rem; }
        .filter-item:hover { color: white; transform: translateX(5px); }

        .grid { flex: 1; display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px; }

        .card {
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.7) 0%, rgba(30, 41, 59, 0.4) 100%);
            border: 1px solid var(--card-border);
            border-radius: 24px; padding: 30px; position: relative;
            display: flex; flex-direction: column; transition: 0.3s;
        }
        .card:hover { 
            transform: translateY(-8px); border-color: #818cf8;
            box-shadow: 0 20px 40px -10px rgba(0,0,0,0.4);
            background: rgba(30, 41, 59, 0.9);
        }

        .score-badge {
            position: absolute; top: 20px; right: 20px;
            width: 50px; height: 50px; background: #3b82f6; color: white;
            border-radius: 14px; display: flex; flex-direction: column;
            align-items: center; justify-content: center; font-weight: 800;
        }
        .score-label { font-size: 0.6rem; font-weight: 600; text-transform: uppercase; }

        .product-img { width: 100%; height: 220px; object-fit: contain; margin: 15px 0 30px; filter: drop-shadow(0 20px 30px rgba(0,0,0,0.4)); }
        
        h2 { font-size: 1.3rem; font-weight: 700; margin: 0 0 15px 0; height: 3em; overflow: hidden; line-height: 1.4; }

        .specs-grid { 
            display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-bottom: 30px; 
            background: rgba(0,0,0,0.2); padding: 15px; border-radius: 16px; 
        }
        .spec-item { font-size: 0.85rem; color: #cbd5e1; display: flex; gap: 8px; align-items: center;}

        .price-row { margin-top: auto; display: flex; justify-content: space-between; align-items: center; padding-top: 20px; border-top: 1px solid rgba(255,255,255,0.05); }
        .price { font-size: 1.8rem; font-weight: 800; color: white; }
        .btn-card { 
            background: white; color: #0f172a; padding: 12px 24px; border-radius: 10px; 
            font-weight: 700; text-decoration: none; font-size: 0.9rem; transition: background 0.2s;
        }
        .btn-card:hover { background: #e2e8f0; }

        @media (max-width: 768px) {
            h1 { font-size: 3rem; }
            .navbar { width: 85%; flex-wrap: wrap; } 
            .nav-links { display: none; } /* En m√≥vil ocultamos el men√∫ simple */
            /* Podr√≠amos hacer que el comparador se vea en m√≥vil tambi√©n, pero requerir√≠a m√°s CSS */
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="logo" id="reset-home">‚ö° LaptopComparator</div>
        <div class="nav-links">
            <a href="/comparar" class="btn-vs">
                ‚öñÔ∏è Comparador VS
            </a>
            
            <span class="nav-btn" id="nav-top">Top Ventas</span>
            <span class="nav-btn" id="nav-gaming">Gaming</span>
            <span class="nav-btn" id="nav-student">Estudiantes</span>
        </div>
    </nav>

    <section class="hero">
        <div class="badge-pill">‚ú® Algoritmo v2.0 Actualizado</div>
        <h1>Laptop <br /> Comparator</h1>
        <p class="subtitle">La herramienta definitiva para ingenieros y estudiantes. Filtra el marketing, encuentra la potencia real y ahorra dinero.</p>
        
        <div class="cta-container">
            <button class="btn-primary" onclick="document.getElementById('laptops-grid').scrollIntoView({behavior: 'smooth'})">
                Ver Cat√°logo üëá
            </button>
            <a href="https://twitter.com/MejoresLaptop" target="_blank" class="btn-ghost">
                Saber m√°s
            </a>
        </div>
    </section>

    <div class="main-container">
        <aside class="sidebar">
            <div class="filter-box">
                <span class="filter-title">Ordenar Por</span>
                <div class="filter-item" id="sort-score">‚ö° Mejor Puntuaci√≥n</div>
                <div class="filter-item" id="sort-price-asc">üí∞ Precio: Bajo a Alto</div>
                <div class="filter-item" id="sort-price-desc">üíé Precio: Alto a Bajo</div>
            </div>
            <div class="filter-box">
                <span class="filter-title">Rango de Precio</span>
                <div class="filter-item" id="filter-all">üîÑ Ver Todos</div>
                <div class="filter-item" id="filter-under-500">üìâ Menos de 500‚Ç¨</div>
                <div class="filter-item" id="filter-under-800">‚öñÔ∏è Menos de 800‚Ç¨</div>
                <div class="filter-item" id="filter-over-1000">üöÄ Gama Alta (+1000‚Ç¨)</div>
            </div>
        </aside>

        <main class="grid" id="laptops-grid">
            {laptops.map((laptop) => (
                <article class="card" data-price={laptop.price_eur} data-score={getScore(laptop.price_eur)} data-category={laptop.category}>
                    <div class="score-badge">
                        {getScore(laptop.price_eur)} <span class="score-label">PTS</span>
                    </div>
                    <img src={laptop.brand_img} alt={laptop.name} class="product-img" />
                    <h2>{laptop.name}</h2>
                    <div class="specs-grid">
                        <div class="spec-item">üß† {laptop.specs.cpu}</div>
                        <div class="spec-item">üíæ {laptop.specs.ram}</div>
                        <div class="spec-item">üíø {laptop.specs.storage}</div>
                        <div class="spec-item">‚öñÔ∏è {laptop.specs.weight}</div>
                    </div>
                    <div class="price-row">
                        <span class="price">{laptop.price_eur} ‚Ç¨</span>
                        <a href={`/laptops/${laptop.slug}`} class="btn-card">Ver Ficha</a>
                    </div>
                </article>
            ))}
        </main>
    </div>

    <script>
        const grid = document.getElementById('laptops-grid');
        const cards = Array.from(document.querySelectorAll('.card'));
        const navTop = document.getElementById('nav-top');
        const navGaming = document.getElementById('nav-gaming');
        const navStudent = document.getElementById('nav-student');
        const logo = document.getElementById('reset-home');

        function filterByCategory(category) {
            cards.forEach(card => {
                const categories = card.dataset.category || "";
                if (categories.includes(category)) card.style.display = 'flex';
                else card.style.display = 'none';
            });
            grid.scrollIntoView({behavior: 'smooth'});
        }

        if(navTop) navTop.addEventListener('click', () => filterByCategory('top'));
        if(navGaming) navGaming.addEventListener('click', () => filterByCategory('gaming'));
        if(navStudent) navStudent.addEventListener('click', () => filterByCategory('student'));
        if(logo) logo.addEventListener('click', () => {
            cards.forEach(card => card.style.display = 'flex');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        document.getElementById('sort-score').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.score - a.dataset.score);
            updateGrid(sorted);
        });
        document.getElementById('sort-price-asc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => a.dataset.price - b.dataset.price);
            updateGrid(sorted);
        });
        document.getElementById('sort-price-desc').addEventListener('click', () => {
            const sorted = cards.sort((a, b) => b.dataset.price - a.dataset.price);
            updateGrid(sorted);
        });
        document.getElementById('filter-all').addEventListener('click', () => cards.forEach(c => c.style.display = 'flex'));
        document.getElementById('filter-under-500').addEventListener('click', () => filterByPrice(0, 500));
        document.getElementById('filter-under-800').addEventListener('click', () => filterByPrice(0, 800));
        document.getElementById('filter-over-1000').addEventListener('click', () => filterByPrice(1000, 99999));

        function filterByPrice(min, max) {
            cards.forEach(card => {
                const price = parseFloat(card.dataset.price);
                if (price >= min && price <= max) card.style.display = 'flex';
                else card.style.display = 'none';
            });
        }
        function updateGrid(sortedCards) {
            grid.innerHTML = '';
            sortedCards.forEach(card => { card.style.display = 'flex'; grid.appendChild(card); });
        }
    </script>
</body>
</html>