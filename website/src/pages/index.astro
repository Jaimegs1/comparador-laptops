                    </div>
                </article>
            ))}
        </main>
    </div>

    <script>
        const grid = document.getElementById('laptops-grid');
        const cards = Array.from(document.querySelectorAll('.card'));
        const navTop = document.getElementById('nav-top');
        const navGaming = document.getElementById('nav-gaming');
        const navStudent = document.getElementById('nav-student');
        const logo = document.getElementById('reset-home');

        function filterByCategory(category) {
            cards.forEach(card => {
                const categories = card.dataset.category || "";
                if (categories.includes(category)) card.style.display = 'flex';
                else card.style.display = 'none';
            });
            grid.scrollIntoView({behavior: 'smooth'});
        }

        if(navTop) navTop.addEventListener('click', () => filterByCategory('top'));
        if(navGaming) navGaming.addEventListener('click', () => filterByCategory('gaming'));
        if(navStudent) navStudent.addEventListener('click', () => filterByCategory('student'));
        if(logo) logo.addEventListener('click', () => {
            cards.forEach(card => card.style.display = 'flex');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
        
        // Filtros L√≥gica
        document.getElementById('sort-score').addEventListener('click', () => updateGrid(cards.sort((a, b) => b.dataset.score - a.dataset.score)));
        document.getElementById('sort-price-asc').addEventListener('click', () => updateGrid(cards.sort((a, b) => a.dataset.price - b.dataset.price)));
        document.getElementById('sort-price-desc').addEventListener('click', () => updateGrid(cards.sort((a, b) => b.dataset.price - a.dataset.price)));
        document.getElementById('filter-all').addEventListener('click', () => cards.forEach(c => c.style.display = 'flex'));
        document.getElementById('filter-under-500').addEventListener('click', () => filterByPrice(0, 500));
        document.getElementById('filter-under-800').addEventListener('click', () => filterByPrice(0, 800));
        document.getElementById('filter-over-1000').addEventListener('click', () => filterByPrice(1000, 99999));

        function filterByPrice(min, max) {
            cards.forEach(card => {
                const price = parseFloat(card.dataset.price);
                if (price >= min && price <= max) card.style.display = 'flex';
                else card.style.display = 'none';
            });
        }
        function updateGrid(sortedCards) {
            grid.innerHTML = '';
            sortedCards.forEach(card => { card.style.display = 'flex'; grid.appendChild(card); });
        }
    </script>
