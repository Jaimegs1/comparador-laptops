    <script define:vars={{laptops}}>
        // --- GESTI√ìN DE FILTROS AVANZADA ---
        const grid = document.getElementById('laptops-grid');
        const cards = Array.from(document.querySelectorAll('.card'));
        
        let state = {
            maxPrice: 2500,
            brands: [],
            ram: [],
            category: 'all'
        };

        const priceSlider = document.getElementById('price-slider');
        const priceDisplay = document.getElementById('price-value-display');
        
        priceSlider.addEventListener('input', (e) => {
            state.maxPrice = parseInt(e.target.value);
            priceDisplay.innerText = state.maxPrice + '‚Ç¨';
            applyFilters();
        });

        document.querySelectorAll('.brand-filter').forEach(cb => {
            cb.addEventListener('change', (e) => {
                const value = e.target.value;
                if(e.target.checked) state.brands.push(value);
                else state.brands = state.brands.filter(b => b !== value);
                applyFilters();
            });
        });

        document.querySelectorAll('.ram-filter').forEach(cb => {
            cb.addEventListener('change', (e) => {
                const value = e.target.value;
                if(e.target.checked) state.ram.push(value);
                else state.ram = state.ram.filter(r => r !== value);
                applyFilters();
            });
        });

        document.getElementById('sort-score').addEventListener('click', () => sortGrid('score'));
        document.getElementById('sort-price-asc').addEventListener('click', () => sortGrid('price-asc'));
        document.getElementById('sort-price-desc').addEventListener('click', () => sortGrid('price-desc'));

        const navTop = document.getElementById('nav-top');
        const navGaming = document.getElementById('nav-gaming');
        const navStudent = document.getElementById('nav-student');
        if(navTop) navTop.addEventListener('click', () => setCategory('top'));
        if(navGaming) navGaming.addEventListener('click', () => setCategory('gaming'));
        if(navStudent) navStudent.addEventListener('click', () => setCategory('student'));
        document.getElementById('reset-home').addEventListener('click', () => setCategory('all'));

        function setCategory(cat) {
            state.category = cat;
            window.scrollTo({ top: 0, behavior: 'smooth' });
            applyFilters();
        }

        function applyFilters() {
            cards.forEach(card => {
                const price = parseFloat(card.dataset.price);
                const name = card.dataset.name;
                const ram = card.dataset.ram;
                const categories = card.dataset.category || "";

                let matchPrice = price <= state.maxPrice;
                let matchBrand = state.brands.length === 0 || state.brands.some(b => name.includes(b));
                let matchRam = state.ram.length === 0 || state.ram.some(r => ram.includes(r));
                let matchCat = state.category === 'all' || categories.includes(state.category);

                if (matchPrice && matchBrand && matchRam && matchCat) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function sortGrid(criteria) {
            let sortedCards = cards.sort((a, b) => {
                if (criteria === 'score') return b.dataset.score - a.dataset.score;
                if (criteria === 'price-asc') return a.dataset.price - b.dataset.price;
                if (criteria === 'price-desc') return b.dataset.price - a.dataset.price;
            });
            grid.innerHTML = '';
            sortedCards.forEach(card => { card.style.display = 'flex'; grid.appendChild(card); applyFilters(); });
        }

        // --- WIZARD ---
        let wizardData = { maxPrice: 9999, use: '' };
        const modal = document.getElementById('wizard-overlay');
        document.getElementById('wizard-trigger').addEventListener('click', () => modal.classList.add('active'));
        document.getElementById('close-wizard').addEventListener('click', () => modal.classList.remove('active'));

        window.nextStep = function(step, value) {
            if (step === 1) {
                wizardData.maxPrice = value;
                document.getElementById('step-1').classList.remove('active');
                document.getElementById('step-2').classList.add('active');
            } else if (step === 2) {
                wizardData.use = value;
                document.getElementById('step-2').classList.remove('active');
                document.getElementById('step-result').classList.add('active');
                calculateResult();
            }
        };

        window.resetWizard = function() {
            document.getElementById('step-result').classList.remove('active');
            document.getElementById('step-1').classList.add('active');
            wizardData = { maxPrice: 9999, use: '' };
        };

        function calculateResult() {
            document.getElementById('wizard-loading').style.display = 'block';
            document.getElementById('wizard-match').style.display = 'none';

            setTimeout(() => {
                let filtered = laptops.filter(l => l.price_eur <= wizardData.maxPrice);
                if (wizardData.use === 'gaming') {
                    let gaming = filtered.filter(l => l.category.includes('gaming') || l.name.toLowerCase().includes('rtx'));
                    if(gaming.length > 0) filtered = gaming;
                } else if (wizardData.use === 'student') {
                    filtered.sort((a,b) => a.price_eur - b.price_eur);
                } else if (wizardData.use === 'code') {
                    let pro = filtered.filter(l => l.specs.ram.includes('16GB'));
                    if(pro.length > 0) filtered = pro;
                }
                let winner = filtered.length > 0 ? filtered[0] : laptops[0];
                const amazonLink = `https://www.amazon.es/s?k=${winner.name.replace(/ /g, '+')}&tag=comparadorjai-21`;

                document.getElementById('wizard-loading').style.display = 'none';
                document.getElementById('wizard-match').style.display = 'block';
                document.getElementById('wiz-img').src = winner.brand_img;
                document.getElementById('wiz-name').innerText = winner.name;
                document.getElementById('wiz-price').innerText = winner.price_eur + ' ‚Ç¨';
                const wizLinkBtn = document.getElementById('wiz-link');
                wizLinkBtn.href = amazonLink;
                wizLinkBtn.innerText = 'üõí Ver Oferta en Amazon';
                wizLinkBtn.target = '_blank'; 
                wizLinkBtn.rel = 'noopener noreferrer';
            }, 800);
        }
    </script>
