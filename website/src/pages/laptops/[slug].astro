                <li>RAM <strong>{laptop.specs.ram}</strong></li>
                <li><span data-i18n="storage">Almacenamiento</span> <strong>{laptop.specs.storage}</strong></li>
                <li><span data-i18n="weight">Peso</span> <strong>{laptop.specs.weight}</strong></li>
            </ul>

            <a href={amazonSearchLink} target="_blank" rel="noopener noreferrer" class="btn-amazon">
                üõí <span data-i18n="buy">Ver precio en Amazon</span>
            </a>
        </div>
    </main>

    <script>
        const translations = {
            es: { back: "‚Üê Volver", cpu: "Procesador", storage: "Almacenamiento", weight: "Peso", buy: "Ver precio en Amazon" },
            en: { back: "‚Üê Back", cpu: "Processor", storage: "Storage", weight: "Weight", buy: "Check Price on Amazon" }
        };

        const userLang = navigator.language || navigator.userLanguage; 
        const isEnglish = !userLang.startsWith('es');

        if (isEnglish) {
            // Traducir textos
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if(translations.en[key]) el.innerText = translations.en[key];
            });

            // Cambiar Precio a D√≥lares
            const priceTag = document.querySelector('.price-tag');
            const eur = parseFloat(priceTag.getAttribute('data-eur'));
            priceTag.innerText = "$" + Math.round(eur * 1.08);
        }
    </script>
</body>
</html>