        .price-tag { font-size: 2rem; font-weight: 800; color: #4ade80; margin-bottom: 30px; display: block; }
        
        .specs-list { list-style: none; padding: 0; margin-bottom: 40px; }
        .specs-list li {
            padding: 15px 0; border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex; justify-content: space-between; color: var(--text-muted);
        }
        .specs-list li strong { color: white; }

        .btn-amazon {
            background: #f59e0b; color: #1e1b4b; text-decoration: none;
            padding: 15px 30px; border-radius: 100px; font-weight: 800; display: inline-flex;
            align-items: center; gap: 10px; transition: transform 0.2s; width: 100%; justify-content: center;
