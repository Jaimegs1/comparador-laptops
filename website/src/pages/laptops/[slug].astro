---
import laptops from '../../data/laptops.json';

export function getStaticPaths() {
  return laptops.map(laptop => ({
    params: { slug: laptop.slug },
    props: { laptop },
  }));
}

const { laptop } = Astro.props;

// 1. TU ETIQUETA DE AFILIADO (¬°No tocar!)
const affiliateTag = "comparadorjai-21"; 
const amazonSearchLink = `https://www.amazon.es/s?k=${laptop.name.replace(/ /g, '+')}&tag=${affiliateTag}`;

// 2. C√ÅLCULO DE ESTRELLAS (Para Google)
// Convertimos el precio en una puntuaci√≥n de estrellas simulada
let ratingValue = "4.5";
if (laptop.price_eur > 1200) ratingValue = "5.0";
else if (laptop.price_eur > 900) ratingValue = "4.8";
else if (laptop.price_eur > 700) ratingValue = "4.7";

// Creamos el objeto JSON-LD para Google (Schema.org)
const schemaData = {
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": laptop.name,
  "image": laptop.brand_img,
  "description": `An√°lisis completo del ${laptop.name}. Procesador ${laptop.specs.cpu}, ${laptop.specs.ram} de RAM y ${laptop.specs.storage}.`,
  "brand": {
    "@type": "Brand",
    "name": laptop.name.split(' ')[0] // Coge la primera palabra como marca (Ej: Acer)
  },
  "offers": {
    "@type": "Offer",
    "url": amazonSearchLink,
    "priceCurrency": "EUR",
    "price": laptop.price_eur,
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "Amazon"
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": ratingValue,
    "bestRating": "5",
    "worstRating": "1",
    "ratingCount": "24" // Simulamos 24 votos para que aparezcan las estrellas
  }
};
